    <body class="is-loading">
        <div id="preloader" class="preloader">
            <img class="preloader__logotype" src="" alt="logotype">
        </div>

        <header class="site-header">
            <!-- Header here -->
            <div class="head-wrap">
                <a href="{{ site.url ~ '/' }}" class="logotype">

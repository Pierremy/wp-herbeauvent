{% extends 'base.twig' %}
{% block content %}

<div class="view" data-namespace="boutique">
    <main class="{{ body_class }}">

        <section class="shop-head grid">
            <div class="container">
                <h1>L'Herboristerie Bio</h1>
                <div class="categories">
                    {% for cat in categories %}
                        <a href="{{ cat.permalink }}" class="cat-item">
                            <div class="img-wrap">
                                <img src="{{ cat.thumbnail }}" alt="{{ cat.name }}">
                            </div>
                            <h2>{{ 'Les ' ~  cat.name }}</h2>
                        </a>
                    {% endfor %}
                </div>
            </div>
            {#{ dump(categories) }#}
        </section>

        <section class="shop-listing grid">
            <div class="container">
                {% for cat in categories %}
                    <div class="cat">
                        <h2>{{ cat.name }}</h2>
                        <div class="cat-listing">
                            {% for prod in cat.products %}
                                <div class="prod-item">
                                    <a class="img-wrap" href="{{ prod.permalink }}">
                                        <img src="{{ prod.thumbnail }}" alt="{{ prod.post_title }}">
                                    </a>
                                    <div class="prod-meta">
                                        <a class="prod-title" href="{{ prod.permalink }}">
                                            <h3>{{ prod.post_title }}</h3>
                                            <span>{{ prod.short_desc }}</span>
                                        </a>
                                        <div class="prod-price">
                                            <span>{{ prod._price }}â‚¬</span>
                                        </div>
                                        <div class="addToCart">
                                            Ajouter au panier (+)
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    {#{ dump(cat.products) }#}
                {% endfor %}
            </div>
        </section>
    </main>
</div>

{% endblock content %}